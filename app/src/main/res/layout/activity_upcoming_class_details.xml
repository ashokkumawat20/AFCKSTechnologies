<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__new__updates"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Activity.UpcomingClassDetailsActivity">
    <!--..........................................-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:background="@color/bg_spnner"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_weight=".2"
            android:background="@drawable/logo_afcks" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_weight=".8"
            android:gravity="left|center|center_horizontal"
            android:paddingLeft="@dimen/spacing_medium"
            android:text="Class details"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
    <!-- ********************************************************* -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:id="@+id/spinnerBtach"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/custom_spinner_background"
            android:popupBackground="@color/bg_spnner"
            android:spinnerMode="dialog"
            android:textColor="@android:color/black" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/spacing_medium"
        android:background="@drawable/custom_spinner_background"
        android:orientation="horizontal"
        android:weightSum="1">


        <EditText
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".8"
            android:hint="Search..."
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/text_c"
            android:textColorHint="@color/color_faintgray"
            android:textSize="@dimen/text_title" />

        <ImageView
            android:id="@+id/serach_hide"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".2"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".2"
            android:src="@drawable/ic_clear_black_24dp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/courseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_medium"
        android:text="sdsd"
        android:visibility="gone"
        android:textColor="@color/bg_spnner" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/batchesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_medium"
        android:clipToPadding="false"
        android:paddingTop="8dp"
       android:paddingBottom="@dimen/spacing_large"

        />

</LinearLayout>
