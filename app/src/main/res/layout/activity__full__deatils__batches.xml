<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity__location__details"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/bg_color"
android:fillViewport="false"
android:focusable="true"
android:focusableInTouchMode="true"
android:orientation="vertical"
android:weightSum="1"
tools:context="in.afckstechnologies.mail.afckstechnologies.Activity.Activity_Full_Deatils_Batches">
<!--..........................................-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_medium"
    android:background="#223458"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_weight=".2"
        android:background="@drawable/logo_afcks" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_weight=".8"
        android:gravity="left|center|center_horizontal"
        android:paddingLeft="@dimen/spacing_medium"
        android:text="Batch Details"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>
<!-- ********************************************************* -->

    <LinearLayout
