<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:id="@+id/lead_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_batch_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:background="#70AD47"
                android:gravity="center"
                android:text="B. No."
                android:textColor="@color/back_c"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small"
            android:weightSum="2">

            <TextView
                android:id="@+id/textreminder_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:text="Course"
                android:textColor="#666A6D"
                android:textSize="16sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:text=":"
                android:textColor="@color/back_c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/view_course_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:background="@android:color/transparent"
                android:text=""
                android:textColor="@color/text_c"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small"
            android:weightSum="2">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:text="Start Date"
                android:textColor="#666A6D"
                android:textSize="16sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:text=":"
                android:textColor="@color/back_c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/view_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:background="@android:color/transparent"
                android:text=""
                android:textColor="@color/text_c"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small"
            android:weightSum="2">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:text="Frequency"
                android:textColor="#666A6D"
                android:textSize="16sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:text=":"
                android:textColor="@color/back_c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/view_frequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:background="@android:color/transparent"
                android:text=""
                android:textColor="@color/text_c"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small"
            android:weightSum="2">

            <TextView

                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:text="Location"
                android:textColor="#666A6D"
                android:textSize="16sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:text=":"
                android:textColor="@color/back_c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/view_Location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:background="@android:color/transparent"
                android:text=""
                android:textColor="@color/text_c"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bookingstatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small"

            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:text="Details"
                android:textColor="#666A6D"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:text=":"
                android:textColor="@color/back_c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/view_Details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/click"
                android:textSize="16sp"
                android:textColor="@color/text_c"
                android:gravity="center|left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"

            android:weightSum="3">

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#8BB7F0"
                android:src="@drawable/share_icon"
                />

            <ImageView
                android:id="@+id/msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/msg_img"
                />

            <ImageView
                android:id="@+id/view_more"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
               android:layout_marginTop="@dimen/spacing_small"
                android:src="@drawable/expand_img"
               />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
